<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Stroke -->
    <item
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" /> <!-- Transparent background -->
            <stroke
                android:width="10dp"
            android:color="#ffffff" />
        </shape>
    </item>
</layer-list>
