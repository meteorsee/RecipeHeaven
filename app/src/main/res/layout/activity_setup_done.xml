<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetupDone">


    <RelativeLayout android:id="@+id/progress_bar"
        android:layout_marginTop="18dp"
        android:layout_marginStart="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/rectangle_60"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="-1dp" />

        <View
            android:id="@+id/rectangle_63"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginTop="5dp" />

    </RelativeLayout>


    <TextView
        android:id="@+id/all_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress_bar"
        android:layout_centerInParent="true"
        android:layout_marginTop="265dp"
        android:fontFamily="@font/raleway"
        android:letterSpacing="0.1"
        android:lineSpacingExtra="8dp"
        android:text="Great, all done! \nLet's get started!"
        android:textSize="30sp" />

    <Button
        android:id="@+id/get_started"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/all_done"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:background="@drawable/rounded_get_started"
        android:fontFamily="@font/open_sans_regular"
        android:letterSpacing="0.1"
        android:text="get started"
        android:textColor="#ffffff"
        android:textSize="30sp" />


</RelativeLayout>