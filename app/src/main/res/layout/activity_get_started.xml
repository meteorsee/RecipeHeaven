<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetStarted">

    <ImageView
        android:id="@+id/get_started_background"
        android:src="@drawable/get_started"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="200dp"
        android:background="@color/get_started_btn"
        app:cardCornerRadius="25dp">

        <Button
            android:id="@+id/get_started_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/get_started_btn"
            android:letterSpacing="0.03"
            android:text="GET STARTED"
            android:textColor="@color/white"/>

    </androidx.cardview.widget.CardView>

    <!-- TextView placed on top of the Button using FrameLayout -->
    <FrameLayout
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="235dp">

        <TextView
            android:id="@+id/text_recipe_heaven"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Recipe\nHeaven"
            android:fontFamily="@font/lobster"
            android:letterSpacing="0.1"
            android:textSize="45sp"
            android:textAlignment="center"
            android:textColor="@color/black" />
    </FrameLayout>

</RelativeLayout>